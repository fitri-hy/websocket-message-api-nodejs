<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Channel Monitoring</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }
        #messages {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow-y: scroll;
            height: 400px;
            border: 1px solid #ddd;
        }
        .message {
            margin-bottom: 10px;
            padding: 10px;
            border-bottom: 1px solid #eee;
        }
        .channel {
            font-weight: bold;
            color: #333;
        }
    </style>
</head>
<body>
    <h1>All Channel Monitoring</h1>
    <div id="messages"></div>

    <script>
        const ws = new WebSocket('ws://localhost:3000/?monitor=true');

        const messagesDiv = document.getElementById('messages');

        ws.onmessage = (event) => {
            const data = JSON.parse(event.data);
            const messageDiv = document.createElement('div');
            messageDiv.className = 'message';

            messageDiv.innerHTML = `<span class="channel">[Channel: ${data.channel}]</span> ${data.sender}: ${data.message}`;
            messagesDiv.appendChild(messageDiv);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        };

        ws.onopen = () => {
            console.log('Connected to monitoring WebSocket');
        };

        ws.onclose = () => {
            console.log('Disconnected from monitoring WebSocket');
        };
    </script>
</body>
</html>
